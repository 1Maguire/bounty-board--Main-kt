  // ask user to enter pyramid level

fun main() {
    print("Enter the pyramid level: ")
    val level = scanner.nextInt()

    for (i in 1..level) {
        for (j in 1..i) {
            print("*")
            println("**")
            println("***")
            println("****")
            println("*****")
            println("******")
            println("*******")
        }
        println()
    }
}

